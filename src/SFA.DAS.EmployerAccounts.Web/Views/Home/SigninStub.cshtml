@model SignInStubViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Sign in stub
        </h1>


        <form method="POST">
            <h2 class="govuk-heading-l">Authenticate as:</h2>
            <p><b>Id:</b> @Model.StubId</p>
            <p><b>Email:</b> @Model.StubEmail</p>
            
            @Html.HiddenFor(model => model.StubId)
            @Html.HiddenFor(model => model.StubEmail)
            @Html.HiddenFor(model => model.ReturnUrl)
            
            <div class="govuk-button-group">
                <button class="govuk-button" type="submit">Authenticate</button>
            </div>
        </form>
    </div>
</div>
