</head>
<body id="@ViewBag.PageID" class="govuk-template__body">

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KWQBWGJ" height="0" width="0" style="display: none; visibility: hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>
    @await Html.PartialAsync("_CookieBanner", HtmlHelpers.GetCookieBannerViewModel(Html))
    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <!--[if lt IE 8]>
        <div id="unsupported-browser-message" aria-hidden="true">
            <p>You're using a web browser that we don't support. Upgrade to one of the <a href="https://www.gov.uk/help/browsers" target="_blank">browsers that we do support</a> to access all the site's features.</p>
        </div>
    <![endif]-->
    @if (HtmlHelpers.IsSupportUser())
    {
        @(await Component.InvokeAsync("SupportUserBanner", new { model = Model is OrchestratorResponse ? Model?.Data : Model }))
        ;
    }


    @await Html.PartialAsync("_Header", HtmlHelpers.GetHeaderViewModel(Html))

    <div class="govuk-width-container">
        @await RenderSectionAsync("breadcrumb", required: false)

        <main class="govuk-main-wrapper" id="main-content" role="main">
            @if (User.Identity.IsAuthenticated)
            {
                @HtmlHelpers.GetContentByType("banner")

                if (HtmlHelpers.IsAuthorized("EmployerFeature.V3AgreementBanner"))
                {
                    var userId = User?.Claims.
                    FirstOrDefault(x => x.Type == ControllerConstants.UserRefClaimKeyName)?.Value;
                    var hashedAccountId = Html.ViewContext.RouteData.Values[ControllerConstants.AccountHashedIdRouteKeyName]?.ToString();
                    {
                        if (!string.IsNullOrEmpty(hashedAccountId))
                        {
                            if (HtmlHelpers.ShowExpiringAgreementBanner(userId, hashedAccountId))
                            {
                                @await Html.PartialAsync(@"_NotSignedV3AgreementMessage_CDN")
                            }
                        }
                    }
                }
            }

            @await Html.PartialAsync(@"_SuccessMessage_CDN", Model as OrchestratorResponse)
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("_Footer", HtmlHelpers.GetFooterViewModel(Html))

    @if (!string.IsNullOrWhiteSpace(SystemDetailsViewModel.EnvironmentName))
    {
        <p class="govuk-body">
            Environment: @SystemDetailsViewModel.EnvironmentName ‚óè Version: @SystemDetailsViewModel.VersionNumber
        </p>
    }

    <script src="@HtmlHelpers.CdnLink("libs/jquery","jquery.min.js")"></script>
    <script src="@HtmlHelpers.CdnLink("libs/govuk-frontend","all.js")"></script>

    <script src="@HtmlHelpers.CdnLink("js","das-all.min.js")"></script>
    <script src="@HtmlHelpers.CdnLink("js","app.min.js")"></script>

    <script>
        window.GOVUKFrontend.initAll();
        window.DASFrontend.initAll();
    </script>
    @await RenderSectionAsync("pageSpecificJS", required: false)

</body>
</html>
