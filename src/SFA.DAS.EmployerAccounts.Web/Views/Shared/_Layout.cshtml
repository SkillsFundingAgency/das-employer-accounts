    @await Html.PartialAsync("_CookieBanner", HtmlHelpers.GetCookieBannerViewModel(Html))
    <div id="svg-defs" aria-hidden="true">
        @await Html.PartialAsync("_SVGSprite")
    </div>


    @if (HtmlHelpers.IsSupportUser())
    {
        @(await Component.InvokeAsync("SupportUserBanner", new { model = Model is OrchestratorResponse ? Model?.Data : Model }))
    }


    @await Html.PartialAsync("_Header", HtmlHelpers.GetHeaderViewModel(Html, useLegacyStyles: true))

    <main role="main" id="content">
        @await RenderSectionAsync("breadcrumb", required: false)

        @if (HtmlContextAccessor.HttpContext.User.Identity.IsAuthenticated)
        {
            @HtmlHelpers.GetContentByType("banner", useLegacyStyles: true)
            if (HtmlHelpers.IsAuthorized("EmployerFeature.V3AgreementBanner"))
            {
                var userId = HtmlContextAccessor.HttpContext.User?.Claims.
                FirstOrDefault(x => x.Type == ControllerConstants.UserRefClaimKeyName)?.Value;
                var hashedAccountId = Html.ViewContext.RouteData.Values[ControllerConstants.AccountHashedIdRouteKeyName]?.ToString();
                if (!string.IsNullOrEmpty(hashedAccountId))
                {
                    if (await HtmlHelpers.ShowExpiringAgreementBanner(userId, hashedAccountId))
                    {
                        @await Html.PartialAsync(@"_NotSignedV3AgreementMessage")
                    }
                }
            }
        }

        @await Html.PartialAsync(@"_SuccessMessage", Model as OrchestratorResponse)
        @RenderBody()
    </main>

    @await Html.PartialAsync("_Footer", HtmlHelpers.GetFooterViewModel(Html, useLegacyStyles: true))

    <div id="global-app-error" class="app-error hidden"></div>
    <script src="/bundles/sfajs.js"></script>
    @await RenderSectionAsync("pageSpecificJS", required: false)
    @if (!string.IsNullOrWhiteSpace(SystemDetailsViewModel.EnvironmentName))
    {
