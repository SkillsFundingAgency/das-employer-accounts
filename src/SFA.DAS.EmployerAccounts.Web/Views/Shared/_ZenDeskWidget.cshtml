@using SFA.DAS.EmployerAccounts.Web.Extensions

<script type="text/javascript">
    window.zESettings = {
        webWidget: {
            contactForm: {
                attachments: false
            },
            chat: {
                menuOptions: {
                    emailTranscript: false
                }
            },
            helpCenter: {
                filter: {
                    section: @Html.GetZenDeskSnippetSectionId()
                }
            }
        }
    };
</script>

<script id="ze-snippet" src="https://static.zdassets.com/ekr/snippet.js?key=@Html.GetZenDeskSnippetKey()"></script>

@Html.SetZenDeskLabels(!string.IsNullOrWhiteSpace(ViewBag.Title) ? new[] {$"reg-{ViewBag.Title}"} : new string[] {ViewBag.ZenDeskLabel});

<script type="text/javascript">
    zE(function() {
        zE.identify({
            name: '@ViewBag.GaData.UserName',
            email: '@ViewBag.GaData.UserEmail',
            organization: '@ViewBag.GaData.Acc'
        });
    });
</script>

