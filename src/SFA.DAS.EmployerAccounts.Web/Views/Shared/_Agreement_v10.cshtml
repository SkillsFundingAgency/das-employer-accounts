                                    <h1 class="govuk-fieldset__heading">
                                        Do you accept the employer agreement on behalf of @Model.EmployerAgreement.LegalEntityName?
                                    </h1>
                                </legend>

                                <div id="accept-hint" class="govuk-hint">
                                    By accepting, you confirm that @Model.EmployerAgreement.LegalEntityName agrees to the terms and conditions and is entering into a legally binding agreement with Department.
                                </div>

                                @if (!ViewData.ModelState.IsValid)
