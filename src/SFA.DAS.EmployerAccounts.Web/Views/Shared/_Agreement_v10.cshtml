                                <div class="govuk-radios">
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="want-to-sign" name="choice" type="radio" value="@SignEmployerAgreementViewModel.SignAgreementNow">
                                        <label class="govuk-label govuk-radios__label" for="want-to-sign">
                                            Yes, I accept the agreement
                                        </label>
                                    </div>
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="do-not-want-to-sign" name="choice" type="radio" value="@SignEmployerAgreementViewModel.ReviewAgreementLater">
                                        <label class="govuk-label govuk-radios__label" for="do-not-want-to-sign">
                                            Not yet
                                        </label>
                                    </div>
                                </div>
