@using SFA.DAS.EmployerAccounts.Web.Helpers
@model ConfirmOrganisationToRemoveViewModel

@{
    ViewBag.PageID = "organisations-remove-cannot";
    ViewBag.Title = "Cannot Remove organisation";
    ViewBag.Section = "organisations";
    ViewBag.ZenDeskLabel = "eas-remove-organisation";
}

@{
    ViewBag.GaData.Vpv = "/accounts/agreements/remove/organisation-remove-cannot";
}

@{Layout = "~/Views/Shared/_Layout_CDN.cshtml"; }

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">You cannot remove @Model.Name</h1>
        <p class="govuk-body">This is because @Model.Name has apprenticeships in progress.</p>
        <p class="govuk-body"><a href="@Url.Action(ControllerConstants.IndexActionName, ControllerConstants.EmployerAgreementControllerName)" class="govuk-button">Return to your organisations and agreements</a></p>
    </div>
</div>

@section breadcrumb
{
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
                <a class="govuk-breadcrumbs__link" href="@Url.Action(ControllerConstants.IndexActionName, ControllerConstants.EmployerTeamControllerName)">Home</a>
            </li>
            <li class="govuk-breadcrumbs__list-item">
                <a class="govuk-breadcrumbs__link" href="@Url.Action(ControllerConstants.IndexActionName, ControllerConstants.EmployerAgreementControllerName)">Your organisations and agreements</a>
            </li>
            <li class="govuk-breadcrumbs__list-item" aria-current="page">Remove organisation</li>
        </ol>
    </div>
}