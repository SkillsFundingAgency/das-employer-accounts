@inject IUrlActionHelper UrlHelpers;

@{
    ViewBag.PageID = "page-employer-account-created";
    ViewBag.Title = "Employer account created";
    ViewBag.GaData.Vpv = "/page-employer-account-created";
    string hashedAccountId = ViewContext.RouteData.Values[RouteValueKeys.HashedAccountId]?.ToString();
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-6">
            <h1 class="govuk-panel__title">
                Employer account created
            </h1>
        </div>
        <p>We've sent you a confirmation email (you may need to check your junk folder and add us to your safe senders list).</p>
        <h2 class="govuk-heading-m">Within your employer account you can:</h2>
        <ul class="govuk-list govuk-list--bullet">
            <li>add new team members</li>
            <li>manage and control permissions of team members</li>
            <li>select your notification settings</li>
            <li>manage apprentices</li>
            <li>give or change permissions to your training provider</li>
        </ul>
        <h2 class="govuk-heading-m">What happens next?</h2>
        <p class="govuk-body">You will be able to: </p>
        <ul class="govuk-list govuk-list--bullet">
            <li>add new team members</li>
            <li>manage and control permissions of team members</li>
            <li>select your notification settings</li>
            <li>manage apprentices</li>
            <li>give or change permissions to your training provider</li>
        </ul>

        <a asp-route="@RouteNames.EmployerTeamIndex" asp-route-hashedAccountId="@hashedAccountId" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
            Go to your employer account homepage
        </a>
    </div>
</div>