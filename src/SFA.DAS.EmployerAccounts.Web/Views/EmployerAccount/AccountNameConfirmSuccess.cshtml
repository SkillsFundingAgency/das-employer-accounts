@model AccountNameConfirmSuccessViewModel
@inject IUrlActionHelper UrlHelpers;

@{
    string pageTitleAndHeading =  Model.NameConfirmed ? "Account name changed" :  "Account name confirmed";
    ViewBag.PageID = "page-change-account-name-changed";
    ViewBag.Title = pageTitleAndHeading;
    ViewBag.GaData.Vpv = "/page-change-account-name-changed";
    ViewBag.ShowNav = false;
    string hashedAccountId = ViewContext.RouteData.Values[RouteValueKeys.HashedAccountId].ToString();
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    Success
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <p class="govuk-notification-banner__heading">
                    @pageTitleAndHeading
                </p>
            </div>
        </div>
        @if (Model.NameConfirmed)
        {
            <h1 class="govuk-heading-xl">You have confirmed your account name as @Model.Name</h1>
        }
        else
        {
            <h1 class="govuk-heading-xl">You have confirmed your Account name</h1>
        }
        <p class="govuk-body">You can change your account name at any time.</p>

        @if (Model.NameConfirmed)
        {
            <p class="govuk-body">Continue creating your account</p>         
        }
        else
        {
            <p class="govuk-body">Before you can add apprentices or receive government funding for apprenticeships, you still need to:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li><a asp-route="@RouteNames.EmployerAgreementIndex" class="govuk-link govuk-link--no-visited-state">accept the agreement</a> between your organisation and the Department for Education (DfE)</li>
                <li><a href="@UrlHelpers.ProviderRelationshipsAction("providers")" class="govuk-link govuk-link--no-visited-state">add a training provider</a> who will support your apprentice(s) through their apprenticeship</li>
            </ul>
            <p class="govuk-body">You can continue creating your account now or at a later date.</p>
        }

        <div class="govuk-button-group">
            <a asp-route="@RouteNames.ContinueNewEmployerAccountTaskList" asp-route-hashedAccountId="@hashedAccountId" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
                Continue
            </a>
            <a asp-route="@RouteNames.PartialAccountSaveProgress" asp-route-hashedAccountId="@hashedAccountId" role="button" draggable="false" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                Save and come back later
            </a>
        </div>
    </div>
</div>
