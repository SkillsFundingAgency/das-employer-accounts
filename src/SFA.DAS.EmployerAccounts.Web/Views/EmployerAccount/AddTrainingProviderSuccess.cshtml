@{
    ViewBag.PageID = "page-add-training-provider-success";
    ViewBag.Title = "Training provider permissions added";
    ViewBag.GaData.Vpv = "/training-provider-success";
    ViewBag.ShowNav = false;
    string hashedAccountId = ViewContext.RouteData.Values[RouteValueKeys.HashedAccountId].ToString();
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    Success
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <p class="govuk-notification-banner__heading">
                    Training provider permissions added
                </p>
            </div>
        </div>
        <h1 class="govuk-heading-xl">You've added a training provider and set their permissions.</h1>

        <p>You can continue to create your account.

        <form method="POST" asp-route="@RouteNames.TrainingProviderSuccess">
            <div class="govuk-button-group">
                <button class="govuk-button" type="submit" id="submit-training-provider-success">Continue</button>
            </div>
        </form>

    </div>
</div>