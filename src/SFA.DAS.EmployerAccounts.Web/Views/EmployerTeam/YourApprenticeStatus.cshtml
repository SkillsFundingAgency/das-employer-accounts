
@model SFA.DAS.EmployerAccounts.Web.ViewModels.AccountDashboardViewModel

<section class="dashboard-section">
    <h2 class="section-heading heading-large">
        Your apprentice
    </h2>

    <table class="responsive">
        <tr>
            <th scope="row" class="tw-35">
                Name
            </th>
            <td class="tw-65">
                @Model.CallToActionViewModel.ApprenticeName
            </td>
        </tr>
        <tr>
            <th scope="row">
                Training Provider
            </th>
            <td>
                @Model.CallToActionViewModel.ProviderName
            </td>
        </tr>
        <tr>
            <th scope="row">
                Course
            </th>
            <td>
                @Model.CallToActionViewModel.CourseName
            </td>
        </tr>
        <tr>
            <th scope="row">
                Status
            </th>
            <td>
                @Model.CallToActionViewModel.CohortStatus.ToString()
            </td>
        </tr>
        <tr>
            <th scope="row">
                Start month
            </th>
            <td>
                @Model.CallToActionViewModel.CourseStartDate.Value.ToString("MMMM yyyy")
            </td>
        </tr>
        <tr>
            <th scope="row">
                Finish month
            </th>
            <td>
                @Model.CallToActionViewModel.CourseEndDate.HasValue
            </td>
        </tr>
    </table>
    <p>
        
        <a href="@Url.Action("ViewApprenticeship", "EmployerTeam", new {Model.CallToActionViewModel. HashedDraftApprenticeshipId, Model.CallToActionViewModel.HashedCohortReference, Model.HashedAccountId})" role="button" draggable="false" class="button">
            View apprentice details
        </a>
    </p>
</section>

