@using SFA.DAS.EmployerAccounts.Web.Helpers
@{ViewBag.PageID = "have-you-chosen-a-training-provider"; }
@{ViewBag.Title = "Have you chosen a training provider to deliver the apprenticeship training?"; }
@{ViewBag.MetaDesc = "Have you chosen a training provider to deliver the apprenticeship training"; }
@{Layout = "~/Views/Shared/_Layout_CDN.cshtml"; }

@{
    ViewBag.GaData.Vpv = "/account/setupapprentice/have-you-chosen-a-training-provider";
    var inError = Model?.GetType().GetProperty("InError") != null;
}

@section breadcrumb
{
    <a href="javascript:history.back()" class="govuk-back-link js-show">Back</a>    
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (inError)
        {
            <div class="govuk-error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                <h2 class="govuk-error-summary__title" id="error-summary-heading">
                    There is a problem
                </h2>
                <div class="govuk-error-summary__body">
                    <ul class="govuk-list govuk-error-summary__list">
                        <li>
                            <a href="#yes">Select yes if you've chosen a training provider to deliver the apprenticeship training</a>
                        </li>
                    </ul>
                </div>
            </div>
        }

        <h1 class="govuk-heading-xl">@ViewBag.Title</h1>
        <form method="POST" action="@Url.Action(ControllerConstants.HaveYouChosenATrainingProviderActionName)">
            @Html.AntiForgeryToken()
            <div class="govuk-form-group @(inError ? "govuk-form-group--error" : "")" id="which-course-your-apprentice-will-take">
                <fieldset class="govuk-fieldset" aria-describedby="which-course-you-apprentice-will-take">
                    @if (inError)
                    {
                        <span class="govuk-error-message" aria-hidden="false" id="which-course-your-apprentice-will-take-error">
                            Select yes if you've chosen a training provider to deliver the apprenticeship training
                        </span>
                    }

                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" type="radio" name="choice" id="yes" value="yes" />
                            <label class="govuk-label govuk-radios__label" for="yes">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" type="radio" name="choice" id="no" value="no" />
                            <label class="govuk-label govuk-radios__label" for="no">
                                No
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="govuk-form-group">
                <button class="govuk-button" type="submit" id="which-course-your-apprentice-will-take-button">Continue</button>
            </div>
        </form>
    </div>
</div>