@{
    ViewBag.PageID = "page-continue-setup-create-advert";
    ViewBag.Title = "Continue Setup - Create Advert";
    ViewBag.Section = "team";
}

@{
    ViewBag.GaData.Vpv = "/accounts/teams/view/page-continue-setup-create-advert";
}

<a href="/" class="back-link">Back</a>

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-large">
            Do you need to create an advert for this apprenticeship?
        </h1>

        <form method="POST" action="@Url.Action("ContinueSetupCreateAdvert")">
            @Html.AntiForgeryToken()
            <div class="form-group  @(!ViewData.ModelState.IsValid ? "error" : "")">
                <fieldset>
                    <legend>
                        <span class="visuallyhidden"></span>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <span class="error-message" id="select-option">@ViewData.ModelState["Choice"].Errors[0].ErrorMessage</span>
                        }
                    </legend>
                    <label for="choice1" class="block-label">
                        <input id="choice1" type="radio" name="choice" value="Yes" />
                        Yes
                    </label>
                    <label for="choice2" class="block-label">
                        <input id="choice2" type="radio" name="choice" value="No" />
                        No
                    </label>
                </fieldset>
            </div>
            <div class="form-group">
                <button type="submit" class="button" id="accept">Continue</button>
            </div>
        </form>
    </div>
</div>
