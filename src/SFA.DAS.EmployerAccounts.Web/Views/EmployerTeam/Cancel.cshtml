@model OrchestratorResponse<SFA.DAS.EmployerAccounts.Models.AccountTeam.InvitationView>

@{
    ViewBag.PageID = "page-team-member-cancel-invite";
    ViewBag.Title = "Cancel invitation";
    ViewBag.Section = "team";
    ViewBag.GaData.Vpv = "/accounts/teams/role/change/page-team-member-cancel-invite";

    string hashedAccountId = ViewContext.RouteData.Values[RouteValueKeys.HashedAccountId].ToString();
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Cancel invitation</h1>
        <p class="lede">Are you sure you want to cancel @Model.Data.Name's invitation?</p>
        <div class="form-group">
            <form asp-route="@RouteNames.EmployerTeamCancelInvitationPost" asp-route-hashedAccountId="@hashedAccountId" method="POST">
                <input type="hidden" id="cancel" name="cancel" value="1" />
                <input type="hidden" id="Email" name="Email" value="@Model.Data.Email" />
                <button type="submit" class="button" id="cancel_invitation">Yes, cancel invitation</button>
            </form>
            <a asp-route="@RouteNames.EmployerTeamView" asp-route-hashedAccountId="@hashedAccountId" class="button button-link">No, don't cancel invitation</a>
        </div>
    </div>
</div>
@section breadcrumb {
    <div class="breadcrumbs">
        <a asp-route ="@RouteNames.EmployerTeamView" asp-route-hashedAccountId="@hashedAccountId" class="back-link">Back to your team</a>
    </div>
}
