@using SFA.DAS.EmployerAccounts.Web.Extensions
@using SFA.DAS.EmployerAccounts.Web.Helpers
@model SFA.DAS.EmployerAccounts.Web.ViewModels.AccountDashboardViewModel

<section class="dashboard-section">
    <h2 class="section-heading heading-large" id="call-to-action-your-apprentice-status">
        Your apprentice
    </h2>

    <table class="responsive">
        <tr>
            <th scope="row">
                Course
            </th>
            <td id="course-name">
                @(Model?.CallToActionViewModel?.Reservations.FirstOrDefault()?.Course?.CourseDescription)
            </td>
        </tr>
        <tr>
            <th scope="row">
                Training Provider
            </th>
            <td id="provider-name">
                @(Model?.CallToActionViewModel.ProviderName)
            </td>
        </tr>
        <tr>
            <th scope="row">
                Status
            </th>
            <td id="with-training-provider" class="govuk-tag govuk-tag--inactive">
                WITH TRAINING PROVIDER
            </td>
        </tr>
    </table>
    <p>

        <a  href="@Url.EmployerCommitmentsV2Action($"{Model.HashedAccountId}/{Model.CallToActionViewModel.ApprovedOrRejectApprenticeDetails}")"  role="button" draggable="false" class="button">
            Add more details
        </a>
    </p>
</section>

